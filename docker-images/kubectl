FROM centos:7
LABEL works.weave.role=system

RUN curl --silent https://storage.googleapis.com/kubernetes-release/release/v1.0.7/bin/linux/amd64/kubectl --output /usr/bin/kubelet && chmod +x /usr/bin/kubelet
ADD skydns-addon /
ENTRYPOINT [ "/usr/bin/kubelet", "-s", "http://kube-apiserver.weave.local:8080" ]
